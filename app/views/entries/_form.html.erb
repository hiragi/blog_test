<%= form_for(@entry) do |f| %>
  <% if @entry.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@entry.errors.count, "error") %> prohibited this entry from being saved:</h2>

      <ul>
      <% @entry.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div id="form">
    <div class="field">
      <%= f.label "タイトル" %><br />
      <%= f.text_field :title, :size=>"100" %>
    </div>
    <div class="field">
      <%= f.label "本文" %><br />
      <%= f.text_area :content, :size=>"100x30" %>
    </div>
    <div class="field">
      <%= f.label "投稿時間" %><br />
      <%= f.datetime_select :updated_at %>
    </div>
  </div>

  <hr>

  <div class="actions">
    <%= f.submit "投稿" %>
  </div>
<% end %>
